{
  "name": "iaai-api",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": ">=20.18.1"
  },
  "scripts": {
    "dev": "concurrently \"node backend/index.js\" \"cd frontend && npm run dev\"",
    "dev:backend": "node backend/index.js",
    "dev:frontend": "cd frontend && npm run dev",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f db",
    "start": "node backend/index.js",
    "build": "npm --prefix frontend install && npm --prefix frontend run build",
    "migrate": "node backend/migrate.js",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.12.0",
    "body-parser": "^1.20.2",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nodemon": "^3.1.11",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "overrides": {
    "undici": "5.28.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
